<%- include ("./partials/header") %>

<form action="/<%= quizType %>-quiz" method="POST">

    <% for (let i = 0; i < questions.length; i += 2) 
    { %>
        <div class="container">
            <div class="row">
                <div class="card question-card col">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= (i+1) %>. <%= questions[i].question %> = ?
                        </h5>
                        <% for (let j = 0; j < questions[i].options.length; j++)
                        { %>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="<%= questions[i].question %>" id="<%= questions[i].options[j] %>" value="<%= questions[i].options[j] %>" required>
                                <label class="form-check-label" for="<%= questions[i].options[j] %>">
                                    <%= questions[i].options[j] %>
                                </label>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="card question-card col">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= (i + 2) %>. <%= questions[i + 1].question %> = ?
                        </h5>
                        <% for (let j = 0; j < questions[i + 1].options.length; j++)
                        { %>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="<%= questions[i + 1].question %>" id="<%= questions[i + 1].options[j] %>" value="<%= questions[i + 1].options[j] %>" required>
                                <label class="form-check-label" for="<%= questions[i + 1].options[j] %>">
                                    <%= questions[i + 1].options[j] %>
                                </label>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <% } %>
        <div class="container submit-button">
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-outline-warning">Submit</button>
                </div>
            </div>
        </div>
</form>

<%- include ("./partials/footer") %>