<%- include ("./partials/header") %>

    <form action="/<%= quizType %>-quiz" method="POST">

        <% for (let i = 0; i < questions.length; i++) 
        { %>
            <div class="card question-card">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= (i+1) %>.
                            <%= questions[i].question %> = ?
                    </h5>

                    <% for (let j = 0; j < questions[i].options.length; j++)
                    { %>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="<%= questions[i].question %>" id="<%= questions[i].options[j] %>" value="<%= questions[i].options[j] %>" required>
                            <label class="form-check-label" for="<%= questions[i].options[j] %>">
                            <%= questions[i].options[j] %>
                        </label>
                        </div>
                        <% } %>
                </div>
            </div>
            <% } %>

            <button type="submit" class="btn btn-warning submit-button">Submit</button>

    </form>

<%- include ("./partials/footer") %>